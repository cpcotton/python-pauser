# THIS IS VARIBLE CARRIER VERSION (vc) 
"""
    from cc_VC_Prog_Pauser import ProgPauser as p
    vc.pz = p(vc)
    """
class ProgPauser:
    def __init__(self, vc):
        self.vc = vc
        self.vc.pauser_print = self.pauser_print
        self.records = []

    def __getattr__(self, name):
        if name.startswith('z') and name[1:].isdigit():
            duration = int(name[1:]) / 10  # Convert to 0.1 second increments
            frame = inspect.currentframe().f_back
            filename = os.path.basename(frame.f_code.co_filename)
            lineno = frame.f_lineno

            print(
                f"Pausing for {duration} seconds at {filename}, line {lineno}")
            self.records.append((filename, lineno, duration))
            time.sleep(duration)
            print(f"Resumed after {duration} seconds")
            return

        if name == "info":
            if not self.records:
                print("No pauses made.")
            else:
                for filename, lineno, duration in self.records:
                    print(
                        f"Paused for {duration} seconds at {filename}, line {lineno}")
            print("Console output complete.")
            return

        raise AttributeError(f"Invalid attribute: {name}")

    # allows you to see where you put the pauzes
    def pauser_print(self):
        # Print the traceback before pausing
        frame = inspect.currentframe().f_back
        file_path_name = inspect.getfile(frame)
        # shorten the result
        file_path_name = file_path_name.replace(self.vc.current_script_dir, '')
        line_number = frame.f_lineno
        print(f'PAUSE in {file_path_name} at line {line_number}')

